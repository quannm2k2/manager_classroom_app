<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ManagerClassroom" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/ptit</item>
        <item name="colorPrimaryVariant">@color/ptit</item>
        <item name="colorOnPrimary">@color/ptit</item>
        <item name="android:statusBarColor">@color/ptit</item>
    </style>

    <style name="Theme.ManagerClassroom" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="SignupLoginTheme" parent="Base.Theme.ManagerClassroom" />
    <style name="SplashTheme" parent="Theme.ManagerClassroom"/>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Dark mode -->
    <style name="SCREEN">
        <item name="background">@color/grey</item>
    </style>
    <style name="TEXT">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>