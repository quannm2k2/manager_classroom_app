<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.ControlFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@color/ptit"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/btnBackControl"
            android:padding="10dp"
            android:src="@drawable/back"
            app:tint="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/control_device"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtFloorRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                style="@style/TEXT"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvLight"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:id="@+id/layoutLight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/blank"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:paddingVertical="10dp">

                            <ImageButton
                                android:id="@+id/imgLight"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:src="@drawable/light_off"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:id="@+id/txtLight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/off"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvSpeaker"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:id="@+id/layoutSpeaker"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/blank"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:paddingVertical="10dp">

                            <ImageButton
                                android:id="@+id/imgSpeaker"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:src="@drawable/amplifier_off"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:id="@+id/txtSpeaker"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/off"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvFan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:id="@+id/layoutFan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/blank"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:paddingVertical="10dp">

                            <ImageButton
                                android:id="@+id/imgFan"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:src="@drawable/fan_off"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:id="@+id/txtFan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/off"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvProjector"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:id="@+id/layoutProjector"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/blank"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:paddingVertical="10dp">

                            <ImageButton
                                android:id="@+id/imgProjector"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:src="@drawable/projector_off"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:id="@+id/txtProjector"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/off"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/layoutTurnAll"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:background="@color/blur_black">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtTurnAll"
                            android:layout_weight="1"
                            android:text="@string/on_all"
                            android:layout_marginStart="10dp"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"/>
                        <androidx.appcompat.widget.SwitchCompat
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/swAll"
                            android:layout_marginEnd="10dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>